{% extends 'base.html.twig' %}


{# The content #}
{% block content %}
    <div class="span12">
        {% if msg %}
            {{ msg.display }}
        {%  endif %}
        <form action="index.php" method="post" class="form-horizontal">
            <div class="widget">
                <div class="widget-header"> <i class="icon-list-alt"></i>
                    <h3> SafeGuard Pro - Installation</h3>
