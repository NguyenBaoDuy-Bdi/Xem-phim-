{# Options #}
{%  set menu = 4 %}


{# Extend the base template #}
{% extends 'base.html.twig' %}


{# The content #}
{% block content %}
    <div class="span12">
        {% if msg %}
            {{ msg.display }}
        {%  endif %}


        {% if data.status == 'alreadyExist' %}
            <div class="alert alert-error">
                <i class="icon-warning-sign"></i> <strong>Error!</strong> Tables with the same prefix do already exist. Please delete them or choose another database.
            </div>
        {% elseif data.status == 'success' %}
            <div class="alert alert-success">
                <i class="icon-ok-sign"></i> <strong>Tables created!</strong> The tables have been created. Please continue with the installation.
            </div>
        {% endif %}

        <form action="index.php" method="post" class="form-horizontal">
            {% if data.status == 'success' %}
                <div class="form-actions">
                    <div style="text-align: right; float: right">
                        <button type="submit" name="continueToStep5" class="btn btn-primary">Next Step</button>
                    </div>
                </div>
            {% endif %}
        </form>
    </div>
{% endblock %}